./static/css/vendor.wxssbody {
    background-color: #f3f3f3;
}

.merchants-page .merchants-list {
    padding: 30rpx;
}

.merchants-page .search-item {
    background-color: #fff;
    padding: 14rpx 30rpx;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 999;
}

.merchants-page .search-item ._input {
    background-color: #f3f3f3;
    border-radius: 10rpx;
    height: 60rpx;
    padding: 9rpx 9rpx 9rpx 86rpx;
    font-size: 30rpx;
    color: #8c8f98;
}

.merchants-page .search-item .search-icon {
    position: absolute;
    left: 70rpx;
    top: 35rpx;
    z-index: 222;
}

.merchants-page .code-model {
    background-color: rgba(0,0,0,.7);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    overflow: hidden;
    box-sizing: border-box;
    padding: 0 50rpx;
    z-index: 999;
}

.merchants-page .code-model .code-cont {
    position: relative;
    padding: 50rpx;
    background-color: #fff;
    border-radius: 6rpx;
    overflow: hidden;
    text-align: center;
    width: 100%;
}

.merchants-page .code-item .code-title {
    margin-bottom: 25rpx;
    font-size: 32rpx;
}

.merchants-page .code-item .code-title.red {
    color: #ff4500;
}

.merchants-page .code-item .font-xs {
    font-size: 24rpx;
    color: #bcbcbc;
}

.merchants-page .code-item ._img {
    width: 550rpx;
    height: 550rpx;
    display: block;
    margin-bottom: 25rpx;
}

.merchants-page .code-cont .close-btn {
    position: absolute;
    right: 40rpx;
    top: 25rpx;
}

.merchants-page .merchants-list {
    margin-top: 90rpx;
}

.card-item {
    margin-bottom: 30rpx;
    background-color: #fff;
    border-radius: 4rpx;
    padding: 60rpx 40rpx 5rpx;
}

.card-item .btn-item {
    justify-content: space-between;
}

.card-item .btn-item ._button {
    display: inline-block;
    border: 0;
    border-radius: 0;
    color: #468cee;
    background-color: #fff;
    text-align: center;
    font-size: 28rpx;
    line-height: 90rpx;
    flex: 1;
}

.card-item .btn-item ._button:after {
    content: "";
    border: none;
    border-radius: 0;
}

.card-item .card-title-item {
    padding-bottom: 40rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.card-item .card-title-item .card-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    color: #468cee;
    margin-right: 30rpx;
    font-size: 46rpx;
    padding: 17rpx 27rpx;
    box-sizing: border-box;
    text-align: center;
    border: 1rpx solid #468cee;
}

.card-item .card-title-item .title {
    font-size: 30rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #1c2438;
}

.card-title-item .right-icon {
    background-image: url(data:image/png;base64,);
    background-size: cover;
    width: 28rpx;
    height: 28rpx;
    display: inline-block;
}